{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TypeScript",
            "type": "shell",
            "command": "cd ${workspaceFolder}/backend && npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Start Backend Dev Server",
            "type": "shell",
            "command": "cd ${workspaceFolder}/backend && npm run dev",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Test Client",
            "type": "shell",
            "command": "cd ${workspaceFolder}/backend && npm run test-client",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
} 